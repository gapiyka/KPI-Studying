<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selectFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectFragment">

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="130sp"
        android:text="@string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCancel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.9" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnOk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnOk" />

    <EditText
        android:id="@+id/etInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:text="@string/enter_text_here"
        android:textSize="20sp"
        android:maxLines="1"
        android:inputType="textShortMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#333333"
        android:clickable="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radio_sans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radio_mono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/radio_serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/radio_nature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="50sp"

        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewSans"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Sans"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textViewMono"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="Mono"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textViewSerif"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:text="Serif"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textViewNature"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            android:layout_weight="1"
            android:fontFamily="@font/nature_beauty"
            android:text="Nature"
            android:textColor="#ffffff" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>